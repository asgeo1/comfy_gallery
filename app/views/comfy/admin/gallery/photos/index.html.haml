
.page-header
	= link_to "Return to Galleries", comfy_admin_galleries_path(@site)

	= link_to 'Add new photo', new_comfy_admin_gallery_photo_path(@site, @gallery), :class => 'btn btn-default pull-right'
	%h2= "Photos for #{@gallery.title}"
	- if @photos.count > 0
		%h5= "#{@photos.length} Photos"

- if defined?(ComfortableMexicanSofa)
	- content_for :right_column do
		= render 'comfy/admin/cms/sites/mirrors'

	= render 'comfy/admin/cms/partials/layouts_before'

%ul.list.sortable{:id => 'gallery', :class => 'gallery'}
	= render :partial => 'index_branch', :collection => @photos

- if defined?(ComfortableMexicanSofa)
	= render 'comfy/admin/cms/partials/layouts_after'

