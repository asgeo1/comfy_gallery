.page-header
  = link_to t('comfy.admin.edit.revision', :count => @gallery.revisions.count), admin_gallery_gallery_revisions_path(@site, @gallery), :class => 'btn btn-default pull-right'
  %h2= "Editing #{@gallery.title}"

- content_for :right_column do
  = render 'comfy/admin/cms/sites/mirrors', :object => @gallery

= comfy_form_for @gallery, :as => :gallery, :url => {:action => :update} do |form|
  = render form
